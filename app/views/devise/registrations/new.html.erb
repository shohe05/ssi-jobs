<h2>新規登録</h2>

<div id="register-form">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"col-lg-6"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group"><%= f.label "メールアドレス", :class=>"control-label" %><br />
  <%= f.email_field :email, :autofocus => true, :class=>"form-control" %></div>

  <div class="field form-group"><%= f.label "パスワード", :class=>"control-label" %><br />
  <%= f.password_field :password, :class=>"form-control" %></div>

  <div class="field form-group"><%= f.label "パスワード（確認）", :class=>"control-label"  %><br />
  <%= f.password_field :password_confirmation, :class=>"form-control" %></div>

  <div class="actions form-group"><%= f.submit "登録", :class=>"btn btn-primary btn-lg" %></div>
<% end %>

</div>

<%= render "devise/shared/links" %>