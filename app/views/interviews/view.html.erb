        <div class="panel panel-warning result">
            <div class="panel-heading interview-header">
							<h3 class="panel-title"><%= @offer.name %>　<%= @offer.year %>年度　<%= @offer.job %>
            </div>
              <div class="panel-body">
								<span id="bookmark" style="padding: 10px; border-radius: 10px; background: #e74c3c; font-color: white; float: right;"><%= link_to "+ ブックマークに追加", :controller => "bookmarks", :action => "add", :class => "bookmark-link", :offer_id => @offer.id %></span>
                <div class ="interview">
		            <% @interviews.each do |interview| %>
	                  <h3><%= interview.ordinal %>次選考</h3><br>
		              <table id="mytable">
		                <tr>
		                  <th scope="col">形式</th>
		                  <td><%= interview.interviewer %></td>
		                </tr>
		                <tr>
		                  <th scope="col">距離</th>
		                  <td class="alt"><%= interview.distance %></td>
		                </tr>
		                <tr>
		                  <th scope="col">机の有無</th>
		                  <td><%= interview.desk_presence %></td>
		                </tr>
		                <tr>
