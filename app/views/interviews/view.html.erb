		                  <td class="alt"><%= interview.atomosphere %></td>
		                </tr>
		                <tr>
		                  <th scope="col">質問内容</th>
		                  <td><%= interview.question %></td>
		                </tr>
		                <tr>
		                  <th scope="col">感想</th>
