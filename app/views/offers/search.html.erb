<!--nilガード-->
              <%
              @query_category ||= ""
              @query_job ||= ""
              @query_name ||= ""
              @query_year ||= ""
              @search_phrase = @query_category + " " + @query_job + " " + @query_name + " " + @query_year
              %>


<div class="container">

      <div class="row">
  
        <ol class="breadcrumb">
            <li><%= link_to "Home", :controller => "offers", :action => "index" %></li>
            <li><%= link_to @search_phrase + "の検索結果", :controller => "offers", :action => "search", :name => @query_name, :category => @query_category, :job => @query_job, :year => @query_year, :id => "re_search"  %></li>
          </ol>

            <div class="container">
              <% @results.each do |result| %>
              <div class="result box effect1">
                <p style="color:white;"><%= link_to result.name, :controller => "interviews", :action => "view", :id => result.id, :search_phrase => @search_phrase, :name => @query_name, :category => @query_category, :job => @query_job, :year => @query_year %></p>
                <p>業種：<%= result.category %></p>
                <p>職種：<%= result.job %></p>
                <p>年度：<%= result.year %></p>
               </div>
            <% end %>
            </div>
        </div>
    </div>
